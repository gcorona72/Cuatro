<script>
    fetch('/api/guests')
        .then(res => res.json())
        .then(data => {
            document.getElementById('lista').innerHTML = data.map(g => `<p>#${g.id} - ${g.nombre} (Acompa√±ante: ${g.acompanante})</p>`).join('');
        });
</script>
